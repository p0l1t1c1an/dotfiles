
[colors]
background =  #55000000
background2 = #9f000000
transparent = #00000000
foreground =  #ffffffff

primary = #202090
underline = #ffd76000
alert = #bd2c40

[bar/mybar]
width = 100%
height = 25
offset-x = 0
fixed-center = true
enable-ipc = true
wm-restack = bspwm

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = ${colors.primary}

underline-size = 2

border-bottom-size = 2
border-bottom-color = ${colors.background2}

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 1

; default fonts
;font-0 = Font Awesome 5 Brands:pixelsize=10;2

;font-0 = Literation Sans Nerd Font:style=book:pixelsize=10;2

font-0 = Hack Nerd Font:style=Regular:pixelsize=10;2
font-1 = Hack Nerd Font:fontformat=truetype:pixelsize=9;2

; for larger icons
font-2 = Hack Nerd Font:fontformat=truetype:pixelsize=14;2

modules-left = bspwm
modules-center = xwindow
modules-right = sound cpu temperature bat0 bat1 date

; tray
tray-position = right
tray-background = ${colors.background2}
tray-underline = ${colors.underline}
tray-offset-x = 0
tray-padding = 5

[module/xwindow]
pin-output = false
type = internal/xwindow

format-background = ${colors.background2}
format-foreground = ${colors.foreground}
label-padding = 1
label-underline = ${colors.underline}
label = %title:0:50%

[module/bspwm]
type = internal/bspwm
pin-workspace = true
enable-click = true
fuzzy-match = false
label-separator =  
label-separator-padding = 0

; focused
label-focused-font = 3
label-focused = " %name% "
label-focused-background = ${colors.background2}
label-focused-underline = ${colors.underline}
label-focused-padding = 0

; unfocused
label-dimmed-font = 2
label-dimmed = " %name% "
label-dimmed-background = ${colors.background}
label-dimmed-underline = ${colors.background}
label-dimmed-padding = 0

; occupied
label-occupied-font = 2
label-occupied = %name%
label-occupied-padding = 1
; empty - nothing
label-empty-font = 2
label-empty = %name%
label-empty-padding = 1

[module/date]
type = internal/date
interval = 5

date = %H:%M
date-alt = %Y-%m-%d

format-background = ${colors.background2}
label-padding = 1
label-underline = ${colors.underline}
label = %date%

[module/bat0]
type = custom/script
exec = acpiconf -i 0 | awk ' NR == 19 { print $3; }'
interval = 10

format-background = ${colors.background2}
label-padding = 1
label-underline = ${colors.underline}
label = %output%

[module/bat1]
type = custom/script
exec = acpiconf -i 1 | awk ' NR == 18 { print $3; }'
interval = 10

format-background = ${colors.background2}
label-padding = 1
label-underline = ${colors.underline}
label = %output%

[module/temperature]
type = custom/script
exec = sysctl -n hw.acpi.thermal.tz0.temperature | tr -d C
interval = 5

format-background = ${colors.background2}
label-padding = 1
label-underline = ${colors.underline}
label = %output%Â°C

[module/sound]
type = custom/script
exec = mixer vol | cut -d ':' -f2
interval = 15

format-background = ${colors.background2}
label-padding = 1
label-underline = ${colors.underline}
label = %output%%

[module/cpu]
type = custom/script
exec = ps u -U root | grep "[i]dle" | awk '{ printf "%.1f", 100 - $3/8}'
interval = 5

format-background = ${colors.background2}
label-padding = 1
label-underline = ${colors.underline}
label = %output%%


[settings]
screenchange-reload = true
throttle-output = 5
throttle-output-for = 10

compositing-underline = over
pseudo-transparency = true

[global/wm]
margin-top = 0
margin-bottom = 0
